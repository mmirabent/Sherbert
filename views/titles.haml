!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %title Sherbert Title Suggestions
    %link{:href => "css/bootstrap.min.css", :rel => "stylesheet"}
    %link{:href => "titles.css", :rel => "stylesheet"}
  %body
    %div.container
      %div.titles-heading
        %h1 Sherbert
      %div.suggestion-form
        %div{:class => "alert alert-danger alert-dismissable base-alert fade in", :role => "alert", :hidden=>"true"}
          %button.close{:type => "button", :'data-dismiss' => "alert", :'aria-label' => "Close"}
            %span{:'aria-hidden' => "true"}Ã—
          %strong Error!
          %span.message
        %form.form-inline{:action => "#"}
          %div.form-group
            %label.sr-only{:for => "nameInput"} Name
            %input.form-control{:type => "text", :id => "nameInput", :placeholder => "Your nickname"}
          %div.form-group
            %label.sr-only{:for => "titleInput"} Title
            %input.form-control{:type => "text", :id => "titleInput", :placeholder => "Title suggestion"}
          %button{:class => "btn btn-default", :type => "submit"} Suggest
      %div.titles-table
        %table{:class => "table table-striped"}
          %thead
            %tr
              %th Name
              %th Title
              %th Votes
              %th
          %tbody
            - unless @titles.empty?
              - @titles.each do |title|
                %tr
                  %td.name= title[:name]
                  %td.title= title[:title]
                  %td.votes= title[:votes]
                  %td
                    %button{:id => title[:id]} up
    %script{:src => "jquery-2.1.3.min.js"}
    %script{:src => "jquery.cookie.js"}
    %script{:src => "app.js"}
    %script{:src => "js/bootstrap.min.js"}